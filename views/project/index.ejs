<!-- Navbar -->
<nav class="w-full bg-white border-b py-6">
    <div class="max-w-screen-xl flex justify-between mx-auto px-12">
        <h1>PinzonBase</h1>
        <ul class="flex">
            <% if (username) { %>
                <li><a class="py-3 px-4" href="/logout">Logout</a></li>
            <% } else { %>
                <li>
                    <a href="/login">Login</a>
                </li>
            <% } %>
        </ul>
    </div>
</nav>

<div class="max-w-screen-xl py-12 px-4 mx-auto">
    <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-6">
        <div class="mb-6 md:mb-0">
            <p class="text-gray-500 text-sm">Welcome,</p>
            <h3 class="text-xl"><%= username %></h3>
        </div>
        <div class="text-center">
            <a class="block bg-green-400 text-white py-3 px-4 rounded-md shadow-md hover:shadow-lg" href="/project/new">New Project ðŸš€</a>
        </div>
    </div>
    <% projects.forEach(x => { %>
     <div class="block bg-white border rounded-md p-4 my-4 hover:shadow-md">
         <span class="text-gray-500 text-sm">Project ID</span>
         <p class="text-xl mb-4"><%= x._id %> </p>
         <span class="text-gray-500 text-sm">Project Name</span>
         <p class="text-xl"><%= x.projectName %> </p>
     </div>
    <% }) %>
</div>
